# Включаем основные файлы проекта
include README.md
include LICENSE
include config.yml
include requirements.txt
include pyproject.toml

# Включаем документацию
recursive-include docs *.md
recursive-include docs *.yml
recursive-include docs/images *.png *.jpg *.jpeg *.gif

# Включаем примеры
recursive-include examples *.py

# Включаем тесты (опционально, для разработчиков)
recursive-include tests *.py

# Исключаем ненужные файлы
exclude .env
exclude .env.example
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .venv*
